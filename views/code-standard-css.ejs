<span class="pl-e">.success</span> {
    <span class="pl-c1"><span class="pl-c1">box-shadow</span></span>: <span class="pl-c1">0</span> <span class="pl-c1">0</span> <span class="pl-c1">2<span class="pl-k">px</span></span> <span class="pl-c1">rgba</span>(<span class="pl-c1">0</span>,<span class="pl-c1">128</span>,<span class="pl-c1">0</span>,<span class="pl-c1">.3</span>);
